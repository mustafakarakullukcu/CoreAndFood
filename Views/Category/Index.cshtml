@model List<CoreAndFood.Data.Models.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}
<h2>Categories</h2>
<br />
@using(Html.BeginForm())
{
    <p>
        Category Name:@Html.TextBox("p")   @*arama kutusu için p controller parametreden gelen değer.*@
        <input type="submit" value="Find" />
    </p>
}
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>CATEGORY NAME</th>
        <th>STATUS</th>
        <th>DELETE</th>
        <th>UPDATE</th>
        <th></th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.CategoryID</td>
            <td>@x.CategoryName</td>
            <td>@x.Status</td>
            <td><a href="Category/CategoryDelete/@x.CategoryID" class="btn btn-danger">Delete</a></td>
            <td><a href="/Category/CategoryGet/@x.CategoryID" class="btn btn-default">Update</a></td>
        </tr>       
    }
</table>
<a href="/Category/CategoryAdd" class="btn btn-info">New Category</a>
