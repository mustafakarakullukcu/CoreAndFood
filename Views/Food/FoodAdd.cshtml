@model CoreAndFood.Data.Models.Food
@{
    ViewData["Title"] = "FoodAdd";
    Layout = "_Layout";
}

<h1>Food Add</h1>
<br />
@using (Html.BeginForm("FoodAdd", "Food", FormMethod.Post))
{
    @Html.Label("Food Name")
    @Html.TextBoxFor(X=>X.Name, new{@class="form-control"})
    
    <br />@Html.Label("Food Price")
    @Html.TextBoxFor(x=>x.Price, new{@class="form-control"})
    <br />@Html.Label("Food Stock")
    @Html.TextBoxFor(x=>x.Stock, new{@class="form-control"})

    <br />
    @Html.Label("Image URL")
    @Html.TextBoxFor(x=>x.ImageURL,new{@class="form-control"})
    <br />
    @Html.Label("Category")
    @Html.DropDownListFor(x=>x.CategoryID,(List<SelectListItem>)ViewBag.val,new {@class ="form-control"})
    <br />
    @Html.Label("Food Description")
    @Html.TextAreaFor(x=>x.Description, new{@class="form-control"})
    <br />
    <button class="btn btn-primary">Save</button>
}
